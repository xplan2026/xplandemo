# DemoSite 前端环境变量配置
# 复制此文件为 .env.local 并填写真实值

# ========================================
# API 配置
# ========================================
# 主 API 地址
VITE_API_MAIN_URL=https://tactics-1.xplan2026.workers.dev

# 备用 API 地址
VITE_API_BACKUP_URL=https://tactics-1.xplan2026.workers.dev

# ========================================
# Supabase 配置（用于用户统计）
# ========================================
# Supabase 项目 URL（可选，如果不配置则使用模拟数据）
VITE_SUPABASE_URL=

# Supabase Anon Key（可选，如果不配置则使用模拟数据）
VITE_SUPABASE_ANON_KEY=

# 允许的跨域来源（用于 postMessage 验证）
# 多个来源用逗号分隔
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# ========================================
# 应用配置
# ========================================
# 应用标题
VITE_APP_TITLE=X-plan Demo

# 应用描述
VITE_APP_DESCRIPTION=资产保护模拟演示

# 环境类型（development/production）
VITE_APP_ENV=development

# ========================================
# 区块链配置
# ========================================
# Polygon Amoy Testnet Chain ID
VITE_CHAIN_ID=80002

# XPD 代币合约地址
VITE_TOKEN_CONTRACT_ADDRESS=0x35774A4E1fFEee74Fa3859F89cfae00b3aC8C3A8

# 代币精度
VITE_TOKEN_DECIMALS=9

# ========================================
# 被保护钱包配置（仅用于演示）
# ========================================
# 被保护地址 A
VITE_PROTECTED_ADDRESS=0x32af405726ba6bd2f9b7ecdfed3bdd9b590c0939

# ⚠️ 警告：此私钥仅用于演示测试，钱包在测试网中，无真实资产
# 永远不要在主网或真实资产场景中使用此私钥！
VITE_PROTECTED_PRIVATE_KEY=0x70616d7068657400000000000000000000000000000000000000000000000000fae6

# 安全地址 B
VITE_SAFE_ADDRESS=0x2a71e200d13558631831c3e78e88afde8464f761

# ========================================
# 安全配置
# ========================================
# 会话过期时间（秒）
VITE_SESSION_EXPIRY=86400

# API 请求超时（毫秒）
VITE_API_TIMEOUT=10000

# ========================================
# 监控和日志
# ========================================
# 是否启用详细日志
VITE_VERBOSE_LOGGING=true

# 错误追踪（可选）
VITE_SENTRY_DSN=

# ========================================
# 功能开关
# ========================================
# 是否启用模拟转账功能
VITE_ENABLE_SIMULATE_TRANSFER=true

# 是否启用私钥显示功能
VITE_ENABLE_PRIVATE_KEY_DISPLAY=true

# 是否启用钱包连接功能
VITE_ENABLE_WALLET_CONNECT=true
